# =============================================================================
# EVENT-LIFECYCLE-SERVICE - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your values for production deployment.
# DO NOT commit .env to version control!
#
# Generate secure keys with: python -c "import secrets; print(secrets.token_hex(32))"
# =============================================================================

# Environment mode: 'local' or 'prod'
ENV=prod

# --- DATABASE ---
DATABASE_URL_PROD=postgresql://USER:PASSWORD@HOST:5432/DATABASE
DATABASE_URL_LOCAL=dummy
REDIS_URL_LOCAL=dummy
KAFKA_BOOTSTRAP_SERVERS_LOCAL=dummy

# --- REDIS (use rediss:// for TLS, e.g., Upstash) ---
REDIS_URL_PROD=rediss://default:TOKEN@host.upstash.io:6379

# --- KAFKA ---
KAFKA_BOOTSTRAP_SERVERS_PROD=your-kafka-server:9092
KAFKA_API_KEY=your_api_key
KAFKA_API_SECRET=your_api_secret
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN

# --- JWT (MUST match user-and-org-service!) ---
JWT_SECRET=your_jwt_secret_64_chars_or_more

# --- INTERNAL API ---
INTERNAL_API_KEY=your_internal_api_key

# --- SERVICE URLS ---
REAL_TIME_SERVICE_URL_INTERNAL=https://your-real-time-service.onrender.com
USER_SERVICE_URL=https://your-user-and-org-service.onrender.com

# --- SECURITY ---
IP_HASH_SALT=your_64_character_hex_string
ALLOWED_ORIGINS=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# --- AWS S3 ---
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_REGION=us-east-1
# For local dev with MinIO: http://minio:9000 (or http://localhost:9000)
# For production AWS S3: leave empty
AWS_S3_ENDPOINT_URL=
# Set to true only if your S3 bucket has ACLs enabled (legacy buckets)
# Modern S3 buckets have ACLs disabled by default - leave as false
# and use a bucket policy to make objects publicly readable instead
AWS_S3_USE_ACL=false

# --- STRIPE ---
STRIPE_SECRET_KEY=sk_live_your_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# --- STRIPE CONNECT (Marketplace / Organizer Payouts) ---
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_your_connect_webhook_secret
PLATFORM_FEE_PERCENT=4.0
PLATFORM_FEE_FIXED_CENTS=75
PLATFORM_NAME=GlobalConnect
PLATFORM_SUPPORT_EMAIL=support@globalconnect.com

# --- EMAIL ---
RESEND_API_KEY=re_your_api_key
RESEND_FROM_DOMAIN=noreply@yourdomain.com
